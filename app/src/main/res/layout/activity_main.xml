<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home Work 214..."
        android:textStyle="bold"
        android:textSize="26dp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="#2196F3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:weightSum="3"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:weightSum="2"
            >

            <TextView
                android:id="@+id/homework1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Home Work 214.1"
                android:textSize="25dp"
                android:background="#FFEB3B"
                android:layout_margin="20dp"
                android:gravity="center"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/homework2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Home Work 214.2"
                android:textSize="25dp"
                android:background="#FFEB3B"
                android:gravity="center"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:textStyle="bold"
                />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:weightSum="2"
            >

            <TextView
                android:id="@+id/homework3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Home Work 214.3"
                android:textSize="25dp"
                android:background="#FFEB3B"
                android:layout_margin="20dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/homework4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Home Work 214.4"
                android:textSize="25dp"
                android:background="#FFEB3B"
                android:gravity="center"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:textStyle="bold"
                />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/homework5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Home Work 214.5"
                android:textSize="25dp"
                android:background="#FFEB3B"
                android:layout_margin="20dp"
                android:gravity="center"
                android:textStyle="bold"
                />



        </LinearLayout>



    </LinearLayout>



</LinearLayout>